# 파이썬 실행 경로 추가
PYTHONPATH=

# API 환경 변수
OPENAI_API_KEY=your-openai-api-key
TAVILY_API_KEY=your-tavily-api-key
SERPER_API_KEY=your-serper-api-key

# MCP 서버 설정 - trailing slash 필수!
MCP_SERVER_URL="http://localhost:3000/mcp/"

MODEL_NAME=gpt-4o-2024-11-20
MAX_TOKENS=128000
COMPRESSION_MODEL=gpt-4o-2024-11-20
FINAL_REPORT_MODEL=gpt-4o-2024-11-20

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# HITL 서버 설정
HITL_HOST=0.0.0.0
HITL_PORT=8000

# 알림 설정 - 이메일(예시, 실제로 발송 불가)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=hitl-system@example.com
TO_EMAILS=reviewer1@example.com,reviewer2@example.com

# 알림 설정 - Slack (예시, 실제로 발송은 불가)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#hitl-approvals

# 개발 모드
DEBUG=true
LOG_LEVEL=INFO

# 타임아웃 설정
DEFAULT_APPROVAL_TIMEOUT=300
CRITICAL_APPROVAL_TIMEOUT=600