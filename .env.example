# API KEY 설정
TAVILY_API_KEY="your-tavily-api-key"
OPENAI_API_KEY="your-openai-api-key"
SERPER_API_KEY="your-serper-api-key"

# MCP 서버 설정
MCP_SERVER_URL="http://localhost:3000/mcp"

# 서버 설정
HOST=0.0.0.0
PORT=3000 

# Core LLM/Models
MODEL_NAME=gpt-4.1
COMPRESSION_MODEL=gpt-4o-2024-11-20
FINAL_REPORT_MODEL=gpt-4.1
TEMPERATURE=0.1

# HITL / Web UI
HITL_CORS_ALLOW_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
HITL_CORS_ALLOW_CREDENTIALS=false

# A2A Streaming/Push
# Allowlist of webhook egress hosts (CSV)
A2A_PUSH_WEBHOOK_ALLOWLIST=localhost,127.0.0.1
# Optional default token injected by server to webhook
A2A_PUSH_DEFAULT_TOKEN=
# Optional HMAC secret for webhook signing
A2A_PUSH_HMAC_SECRET=

# A2A Webhook Receiver (verification)
A2A_WEBHOOK_EXPECTED_TOKEN=
A2A_WEBHOOK_HMAC_SECRET=
A2A_WEBHOOK_TOLERANCE_SECONDS=300

# A2A Task Store
# memory | redis
A2A_TASK_STORE=redis
A2A_TASK_REDIS_URL=redis://localhost:6379/0
A2A_TASK_TTL_SECONDS=0

# MCP Servers
ARXIV_MCP_URL=http://localhost:3000/mcp
TAVILY_MCP_URL=http://localhost:3001/mcp
SERPER_MCP_URL=http://localhost:3002/mcp

# Research Config
ALLOW_CLARIFICATION=false
SUPERVISOR_FORCE_CONDUCT_RESEARCH_ENABLED=true
SUPERVISOR_FORCE_CONDUCT_RESEARCH_UNTIL=1
RESEARCHER_MIN_ITERATIONS_BEFORE_COMPRESS=1

# Logging
LOG_LEVEL=INFO